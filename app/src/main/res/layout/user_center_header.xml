<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <TextView
            android:id="@+id/tv_user_center_following_count"
            tools:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tv_user_center_following"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            app:layout_constraintRight_toLeftOf="@+id/iv_user_center_avatar"
            app:layout_constraintTop_toTopOf="@+id/iv_user_center_avatar"/>

    <TextView
            android:gravity="center"
            android:id="@+id/tv_user_center_following"
            tools:text="Following"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_user_center_following_count"
            app:layout_constraintRight_toLeftOf="@+id/iv_user_center_avatar"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_center_avatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/iv_user_center_avatar"
            app:layout_constraintLeft_toRightOf="@id/tv_user_center_following"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_user_center_follower"
            tools:src="@mipmap/ic_launcher_round"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/tv_user_center_follower_count"
            tools:text="123"
            app:layout_constraintLeft_toRightOf="@id/iv_user_center_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_user_center_avatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_user_center_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:gravity="center"
            android:id="@+id/tv_user_center_follower"
            tools:text="Follower"
            app:layout_constraintTop_toBottomOf="@id/tv_user_center_follower_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_user_center_avatar"
            app:layout_constraintLeft_toRightOf="@id/iv_user_center_avatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:gravity="center"
            tools:text="HaHaHa"
            android:id="@+id/tv_user_center_name"
            android:layout_marginTop="@dimen/layout_margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_user_center_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:gravity="center"
            android:id="@+id/tv_user_center_desc"
            tools:text="i will make it !"
            android:layout_marginTop="@dimen/layout_margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_center_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>