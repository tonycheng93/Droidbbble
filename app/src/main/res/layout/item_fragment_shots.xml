<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_elevation"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/iv_item_shots"
                android:scaleType="centerCrop"
                android:background="@color/cardview_dark_background"
                android:layout_width="0dp"
                android:layout_height="240dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>

        <ImageView
                android:id="@+id/iv_item_avatar"
                android:background="@mipmap/ic_launcher_round"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_item_shots"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.024"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginStart="8dp"/>

        <TextView
                android:id="@+id/tv_item_title"
                tools:text="@string/navigation_drawer_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/iv_item_avatar"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_item_avatar"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"/>

        <TextView
                tools:text="Tony Cheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_author"
                app:layout_constraintBottom_toBottomOf="@+id/iv_item_avatar"
                app:layout_constraintLeft_toLeftOf="@+id/tv_item_title"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_watch_eye"
                android:id="@+id/iv_item_watch"
                app:layout_constraintLeft_toLeftOf="@+id/tv_item_author"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_author"/>

        <TextView
                tools:text="12345"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_watch"
                app:layout_constraintLeft_toRightOf="@+id/iv_item_watch"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_author"
                app:layout_constraintVertical_bias="0.23"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_comment"
                android:id="@+id/iv_item_comment"
                app:layout_constraintTop_toTopOf="@+id/iv_item_watch"
                app:layout_constraintBottom_toBottomOf="@+id/iv_item_watch"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/tv_item_watch"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

        <TextView
                tools:text="2345"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_comment"
                app:layout_constraintLeft_toRightOf="@+id/iv_item_comment"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_item_shots"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_favorite"
                android:id="@+id/iv_item_favorite"
                app:layout_constraintTop_toTopOf="@+id/iv_item_comment"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_item_comment"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/tv_item_comment"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

        <TextView
                tools:text="123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_favorite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/iv_item_favorite"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_item_shots"
                />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
